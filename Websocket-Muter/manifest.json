{
	"manifest_version": 2,
	"name": "WebSocket Tab Muter",
	"description": "In response to a signal from a websocket, mutes/unmutes all tabs",
	"version": "0.1",
	"background": {
		"scripts": ["muter.js"]
	},
	"commands": {
		"mute-tab": {
			"suggested_key": {
				"default": "Ctrl+M"
			},
			"description": "Mute/unmute the current tab"
		},
		"mute-now": {
			"suggested_key": {
				"default": "Ctrl+Shift+5"
			},
			"description": "Mute all noisy tabs now",
			"global": true
		},
		"unmute-now": {
			"suggested_key": {
				"default": "Ctrl+Shift+6"
			},
			"description": "Unmute all tabs muted by this extension",
			"global": true
		}
	}
}
